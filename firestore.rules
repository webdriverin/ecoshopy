rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is logged in
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper for Admin 
    function isAdmin() {
      return isAuthenticated(); 
    }

    // --- Public Content (Read: Everyone, Write: Admin) ---
    match /products/{document=**} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['rating', 'reviews']));
    }
    match /categories/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /brands/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /offers/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /tickers/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /banners/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /pages/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /faqs/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /ads/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /testimonials/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /featuredCollections/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /reviews/{document=**} {
      allow read, create: if true;
      allow update, delete: if isAdmin();
    }
    
    // --- Reports & Logs ---
    match /productRequests/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    match /newsletterSubscribers/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    match /auditLogs/{document=**} {
      allow read, create: if isAdmin();
      allow update, delete: if false;
    }

    // --- User Data ---
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());

      match /addresses/{addressId} {
        allow read, write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      }
    }

    // --- Orders ---
    match /orders/{orderId} {
      allow create: if true;
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAuthenticated();
    }
  }
}